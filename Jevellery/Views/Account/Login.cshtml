@using Jevellery.ViewModels.Account
@model LoginViewModel

@{
    Layout = "_LayoutDemo";
    var returnUrl = Context.Request.Query["ReturnUrl"];
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-lg p-5">
                <h2 class="text-center mb-4">Login</h2>
                <form asp-controller="account" asp-action="login" method="post">
                    <input type="hidden" asp-for="@Model.ReturnUrl" value="@returnUrl" />
                    <div class="form-group">
                        <label for="UserNameOrEmail">Username or Email</label>
                        <input asp-for="UserNameOrEmail" id="UserNameOrEmail" class="form-control" placeholder="Enter your username or email">
                        <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <label for="Password">Password</label>
                        <input asp-for="Password" id="Password" type="password" class="form-control" placeholder="Enter your password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group form-check d-flex align-items-center mt-3">
                        <input asp-for="RememberMe" id="RememberMe" type="checkbox" class="form-check-input">
                        <label class="form-check-label" for="RememberMe">Remember me</label>
                    </div>
                    <button type="submit" class="btn btn-warning text-center mt-3">Login</button>
                    <a asp-action="register" asp-controller="account" class="btn btn-warning mt-3 ml-3">Register</a>
                </form>
                <div class="text-center">
                </div>
                <div asp-validation-summary="All" class="text-danger mt-3"></div>
            </div>
        </div>
    </div>
</div>
